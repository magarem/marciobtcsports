<div>
  <div class="container">
      <div class="container" style="margin-top: 20px; margin-bottom: 30px;">
        <h1 class="mt-4 text-center">About us</h1>
      </div>
    <div class="container " >
      <div class="row">
        <div class="col-md-12 text-center" >
          <div class="well" style="padding-left: 200px; padding-right:200px;">
            <img src="<%=@about.first.img %>">
            <br><br><h2><%=@about.first.name %></h2>
            <p><%=@about.first.txt %></p>
            <br>
            <%=@about.first.email %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%
           @about.drop(1).in_groups_of(3, false).each do |group| %>
            <div class='row'>
              <% group.each do |item| %>
                <div class='col-md-4 text-center'>
                  <%= image_tag(item.img, class: "text-center") %>
                  <br><br><h2><%=item.name %></h2>
                  <p><%=sanitize(item.txt) %></p>
                  <%=item.email%>
                </div>
              <% end %>
            </div><br>
          <% end %>
         </div><!--/col-12-->
        </div><!--/row-->
      </div>
    </div>
</div>
